<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#339900"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv"
        android:textColor="#ffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<Button
    android:background="#000080"
    android:textColor="#ffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Open Date Picker"
    android:onClick="openDatePicker"/>
    <Button
        android:background="#000080"
        android:textColor="#ffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Time Picker"
        android:onClick="openTimePicker"/>
    <Button
        android:background="#000080"
        android:textColor="#ffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Progress Dialog"
        android:onClick="openProgressDialog"/>
    <Button
        android:background="#000080"
        android:textColor="#ffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alert List"
        android:onClick="openAlertList"/>
    <Button
        android:background="#000080"
        android:textColor="#ffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alert Multi"
        android:onClick="openAlertMulti"/>
    <Button
        android:background="#000080"
        android:textColor="#ffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Alert Single"
        android:onClick="openAlertSingle"/>
    <Button
        android:background="#000080"
        android:textColor="#ffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Custom Alert"
        android:onClick="openCustomAlert"/>
    <Button
        android:background="#000080"
        android:textColor="#ffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Toast"
        android:onClick="openToast"/>

</LinearLayout>